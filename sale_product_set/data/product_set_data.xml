<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Sequences for product.set -->
        <record id="seq_product_set" model="ir.sequence">
            <field name="name">Product Set Code</field>
            <field name="code">product.set</field>
            <field name="prefix">Ver/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <report 
            id="account_invoices"
            model="account.invoice"
            string="Invoices with detail sets"
            report_type="qweb-pdf"
            name="sale_product_set.report_invoice_sets_with_details"
            file="sale_product_set.report_invoice_sets_with_details"
            attachment="(object.state in ('open','paid')) and ('INVDSETS'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_printed_report_name())"
            groups="account.group_account_invoice"
        />

        <report
            id="account_invoices_sets"
            model="account.invoice"
            string="Invoices with Sets"
            report_type="qweb-pdf"
            name="sale_product_set.report_invoice_sets"
            file="sale_product_set.report_invoice_sets"
            attachment="(object.state in ('open','paid')) and ('INVSETS'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_printed_report_name())"
        />

    </data>
</odoo>
