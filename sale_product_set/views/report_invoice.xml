<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_sets">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="page">
                    <section id="intro">
                        <div class="row">
                            <div class="o_bulgaria_name">
                                <div class="col-xs-8">
                                    <p>
                                        <h4>
                                            <span t-if="o.type == 'out_invoice' and o.invoice_number and (o.state == 'open' or o.state == 'paid')">Invoice<span> N° </span></span>
                                            <span t-if="o.type == 'out_invoice' and o.ticket_number and (o.state == 'open' or o.state == 'paid')">Ticket<span> N° </span></span>
                                            <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA<span> N° </span></span>
                                            <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                            <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                            <span t-if="o.type == 'out_refund'">Credit Note</span>
                                            <span t-if="o.type == 'in_refund'">Vendor Credit Note<span> N° </span></span>
                                            <span t-if="o.type == 'in_invoice'">Vendor Bill<span> N° </span></span>
                                            <t t-if="o.type == 'out_invoice' and o.invoice_number">
                                                <span t-field="o.invoice_number"/>
                                            </t>
                                            <t t-if="o.type == 'out_invoice' and o.ticket_number">
                                                <span t-field="o.ticket_number"/>
                                            </t>
                                            <t t-if="o.type == 'out_refund'">
                                                <span t-field="o.custom_number"/>
                                            </t>
                                            <t t-if="o.type not in ['out_invoice', 'out_refund']">
                                                <span t-field="o.number"/>
                                            </t>
                                            <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'"><span t-field="o.origin"/></span>
                                            <span t-if="o.date_invoice"> from <span t-field="o.date_invoice"/></span>
                                            <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'"> from <span t-usertime="%d.%m.%Y"/></span>
                                        </h4>
                                    </p>
                                </div>
                                <div class="col-xs-4 pull-right">
                                    <h4>
                                        <span style="text-align:center;" t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">ORIGINAL</span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-2" t-if="o.user_id.city">
                                <strong>Deal place:</strong>
                                <p t-field="o.user_id.city"/>
                            </div>
                            <div class="col-xs-2" t-if="o.date_invoice">
                                <strong>Due date for taxes:</strong>
                                <p t-field="o.date_invoice"/>
                            </div>
                            <div class="col-xs-2" t-if="o.date_due">
                                <strong>Term of payment:</strong>
                                <p t-field="o.date_due"/>
                             </div>
                            <div class="col-xs-2" t-if="o.partner_id.ref">
                                <strong>Customer Code:</strong>
                                <p t-field="o.partner_id.ref"/>
                            </div>
                            <div  name="reference" class="col-xs-2" t-if="o.reference">
                                <strong>Reference:</strong>
                                <p t-field="o.reference"/>
                            </div>
                        </div>
                        <div class="row mb8">
                            <div class="col-xs-5">
                                <strong>Source:</strong>
                                <p t-field="o.origin"/>
                            </div>
                            <div name="additional" class="col-xs-2">
                            </div>
                            <div name="invoice_address" class="col-xs-5">
                            </div>
                        </div>
                        <t t-call="l10n_bg_extend.dealpartner"/>
                   </section>
                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                    <section id="body">
                        <div class="row" name="invoicebody">
                        <div class="col-xs-12">
                            <t t-foreach="o.order_lines_sets_layouted()" t-as="page">
                                <table class="table table-condensed" name="invoice_line_table">
                                    <thead>
                                        <tr>
                                            <th t-translation="off" style="width:5%;">&#8470;</th>
                                            <th style="width:45%;">Description</th>
                                            <th class="hidden">Source Document</th>
                                            <th class="text-right">Quantity</th>
                                            <th class="text-right">Unit measure</th>
                                            <th class="text-right">Unit Price</th>
                                            <th class="text-right">Taxes</th>
                                            <th class="text-right">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody">
                                        <t t-set="detail" t-value="0"/>
                                        <t t-foreach="page" t-as="layout_category">
                                            <!-- <span t-esc="layout_category_size"/>:<span t-esc="page_size"/> -->
                                            <t t-if="layout_category_size > 0 or page_size > 0" groups="sale.group_sale_layout">
                                                <t t-set="lots" t-value="0"/>
                                                <t t-foreach="layout_category['lines']" t-as="l">
                                                    <t t-if="not lots">
                                                        <t t-set="lots" t-value="any(x.id for x in l.move_lines.filtered(lambda r: r.lot_id != False))"/>
                                                    </t>
                                                </t>
                                                <tr class="active">
                                                    <t t-if="layout_category['quantity'] &gt; 0 and layout_category['price_unit'] &gt; 0">
                                                        <td colspan="2" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">&amp;bull;
                                                            <t t-esc="layout_category['name']" name="pdescription"/>
                                                            <t t-if="lots and not o.print_sets">
                                                                <br/>
                                                                <span>(Lot/SN: </span>
                                                                <t t-foreach="layout_category['lines']" t-as="l">
                                                                    <span t-esc="'-'.join(map(lambda lot: lot.lot_id and '[%s]:%s' % (lot.product_id.default_code, lot.lot_id.name) or '', l.move_lines.filtered(lambda r: r.lot_id)))"/>
                                                                </t>
                                                                <span>)</span>
                                                            </t>
                                                        </td>
                                                        <t t-if="o.print_sets">
                                                            <td class="text-right" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">
                                                                <span t-esc="layout_category['quantity']"/>
                                                            </td>
                                                            <td colspan="5" style="font-weight: bold; border-left: 0px; border-right: 1px; border-bottom: 1px solid black;"/>
                                                        </t>
                                                        <t t-else="">
                                                            <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                                            <t t-if="layout_category['quantity'] &gt; 0">
                                                                <!-- <td style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;"/> -->
                                                                <t t-set="unit_price" t-value="layout_category['quantity'] > 0 and subtotal/layout_category['quantity'] or subtotal"/>
                                                                <td class="text-right" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">
                                                                    <span t-esc="layout_category['quantity']"/>
                                                                </td>
                                                                <td style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;" groups="sale.group_discount_per_so_line"/>
                                                                <td class="text-right" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">
                                                                    <span t-esc="unit_price" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                                </td>
                                                            </t>
                                                            <t t-else="">
                                                                <td colspan="2" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;"/>
                                                                <td style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;" groups="sale.group_discount_per_so_line"/>
                                                            </t>
                                                            <td style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;"/>
                                                            <td style="font-weight: bold; border-left: 0px; border-bottom: 1px solid black;">
                                                                <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                            </td>
                                                        </t>
                                                    </t>
                                                    <t t-else="">
                                                        <td colspan="9" style="font-weight: bold; border-left: 0px; border-right: 1px; border-bottom: 1px solid black;">&amp;bull;
                                                            <t t-esc="layout_category['name']"/>
                                                        </td>
                                                        <t t-set="detail" t-value="1"/>
                                                    </t>
                                                </tr>
                                            </t>
                                            <t t-if="o.print_sets or detail == 1">
                                            <!-- Lines associated -->
                                            <t t-foreach="layout_category['lines']" t-as="l">
                                                <t t-set="lots" t-value="any(x.id for x in l.move_lines.filtered(lambda r: r.lot_id))"/>
                                                <tr>
                                                    <td><span t-esc="l_index+1"/></td>
                                                    <td name="description">
                                                        <span t-if="l.discount==0.0">
                                                            <span t-field="l.name"/>
                                                        </span>
                                                        <span t-if="l.discount &lt; 0.0">
                                                            <span t-field="l.name"/>   (<span t-esc="l.discount * 100"/><span>%)</span>
                                                        </span>
                                                        <t t-if="lots">
                                                            <span>(Lot/SN: </span><span t-esc="'&#59; '.join(map(lambda lot: lot.lot_id and lot.lot_id.name or '', l.move_lines.filtered(lambda r: r.lot_id != False)))"/><span>)</span>
                                                        </t>
                                                    </td>
                                                    <td class="hidden"><span t-field="l.origin"/></td>
                                                    <td class="text-right">
                                                        <span t-field="l.quantity"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-field="l.uom_id" groups="product.group_uom"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-field="l.price_unit"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                                    </td>
                                                    <td class="text-right" id="subtotal">
                                                        <span t-field="l.price_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
                                                <td t-translation="off">&amp;nbsp;</td>
                                                <td/>
                                                <td class="hidden"/>
                                                <td/>
                                                <td/>
                                                <td/>
                                                <td/>
                                                <td/>
                                            </tr>
                                            </t>
                                            <t t-if="o.print_sets">
                                                <t t-if="(layout_category_size > 0 or page_size > 0) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                                    <tr class="text-right">
                                                        <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                                        <t t-set="unit_price" t-value="layout_category['quantity'] > 0 and subtotal/layout_category['quantity'] or subtotal"/>
                                                        <td colspan="9" class="text-right" style="border-right: 1px;">
                                                            <strong>Subtotal: </strong>
                                                            <t t-if="layout_category['quantity'] &gt; 0">
                                                                (<span t-esc="layout_category['quantity']"/>*<span t-esc="unit_price" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>)
                                                            </t>
                                                            <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                                    <p style="page-break-before:always;"> </p>
                                </t>
                            </t>
                        </div>
                    </div>
                        <div class="clearfix">
                            <div id="total" class="row">
                                <div class="col-xs-8 pull-left">
                                    <p class="mb16">
                                        <strong>Total (In Words): </strong>
                                        <span t-field="o.amount_total_words"/>
                                    </p>
                                </div>
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td><span t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    </table>
                                </div>
                                </div>
                        </div>
                        <div class="row" name="invoicepayment">
                            <div class="col-xs-12">
                                <p t-if="o.payment_term_id">
                                    <span t-field="o.payment_term_id.note"/>
                                </p>
                                <p t-if="o.fiscal_position_id.note">
                                    <span t-field="o.fiscal_position_id.note"/>
                                </p>
                            </div>
                        </div>
                    </section>
                    <section id="end">
                        <t t-call="l10n_bg_extend.signatures"/>
                    </section>
                </div>
            </t>
        </template>

        <template id="report_invoice_sets">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="details" t-value="0"/>
                    <t t-call="sale_product_set.report_invoice_document_sets" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
        <!--
        <template id="report_invoice_sets_with_details">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="details" t-value="1"/>
                    <t t-call="sale_product_set.report_invoice_document_sets" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
        -->
    </data>
</odoo>