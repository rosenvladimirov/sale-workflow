<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_sets">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <!-- <t t-set="iso" t-value="o._context.get('iso_value')" /> -->
                <div class="page">
                    <div class="row">
                        <div class="row col-xs-12">
                            <div class="col-xs-8 pull-left">
                            <p>
                            <h2>
                                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice<span> N째 </span></span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA<span> N째 </span></span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                <span t-if="o.type == 'out_refund'">Credit Note</span>
                                <span t-if="o.type == 'in_refund'">Vendor Credit Note<span> N째 </span></span>
                                <span t-if="o.type == 'in_invoice'">Vendor Bill<span> N째 </span></span>
                                <t t-if="o.type == 'out_invoice'">
                                    <span t-field="o.invoice_number"/>
                                </t>
                                <t t-if="o.type == 'out_refund'">
                                    <span t-field="o.custom_number"/>
                                </t>
                                <t t-if="o.type not in ['out_invoice', 'out_refund']">
                                    <span t-field="o.number"/>
                                </t>
                                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'"><span t-field="o.origin"/></span>
                                <span t-if="o.date_invoice"> from <span t-field="o.date_invoice"/></span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'"> from <span t-usertime="%d.%m.%Y"/></span>
                            </h2>
                            </p>
                            </div>
                            <div class="col-xs-4 pull-right">
                            <h2>
                                <span style="text-align:center;" t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">ORIGINAL</span>
                            </h2>
                            </div>
                        </div>
                        <br/>
                        <div class="row col-xs-12">
                            <t t-if="o.user_id.city">
                                <div class="col-xs-2">
                                    <strong>Deal place:</strong>
                                    <p t-field="o.user_id.city"/>
                                </div>
                            </t>
                            <div class="col-xs-2">
                                <strong>Due date for taxes:</strong>
                                <p t-field="o.date_invoice"/>
                            </div>
                            <div class="col-xs-2">
                                <strong>Term of payment:</strong>
                                <p t-field="o.date_due"/>
                            </div>
                            <div class="col-xs-2">
                                <strong>Source:</strong>
                                <p t-field="o.origin"/>
                            </div>
                            <div class="col-xs-2" t-if="o.partner_id.ref">
                                <strong>Customer Code:</strong>
                                <p t-field="o.partner_id.ref"/>
                            </div>
                            <div class="col-xs-2" t-if="o.reference">
                                <strong>Reference:</strong>
                                <p t-field="o.reference"/>
                            </div>
                        </div>

                        <div class="row">
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                        <div class="col-xs-12">
                            <table class="table table-condensed">
                                <thead class="invoice_head_head">
                                    <tr>
                                        <td colspan="2" style="width:50%;"><strong>SUPPLIER</strong></td>
                                        <td colspan="2" style="width:50%;"><strong>CUSTOMER</strong></td>
                                    </tr>
                                </thead>
                                <tbody class="invoice_head_body">
                                    <tr>
                                        <td><strong style="font-size:10px;">Company/Person Name: </strong></td>
                                        <td><span t-field="o.company_id.name"/></td>
                                        <td><strong style="font-size:10px;">Company/Person Name: </strong></td>
                                        <t t-if="o.partner_id.parent_id">
                                            <td><span t-field="o.partner_id.parent_id.name"/></td>
                                        </t>
                                        <t t-if="not o.partner_id.parent_id">
                                            <td><span t-field="o.partner_id.name"/></td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <td><strong style="font-size:10px;">Address: </strong></td>
                                        <td><span t-field="o.company_id.zip"/> <span t-field="o.company_id.city"/><span t-if="o.company_id.country_id">, <span t-field="o.company_id.country_id"/></span></td>   
                                        <td><strong style="font-size:10px;">Address: </strong></td>
                                        <td><span t-field="o.partner_id.zip"/> <span t-field="o.partner_id.city"/><span t-if="o.partner_id.country_id">, <span t-field="o.partner_id.country_id"/></span></td>
                                    </tr>
                                    <tr>
                                        <td><strong style="font-size:10px;">Str.: </strong></td>
                                        <td><span t-field="o.company_id.street"/></td>
                                        <td><strong style="font-size:10px;">Str.: </strong></td>
                                        <td><span t-field="o.partner_id.street"/></td>
                                    </tr>
                                    <tr>
                                        <td/>
                                        <td><span t-field="o.company_id.street2"/></td>
                                        <td/>
                                        <td><span t-field="o.partner_id.street2"/></td>
                                    </tr>
                                    <!--
                                    <tr>
                                        <td><strong style="font-size:10px;">Representer: </strong></td>
                                        <td><span t-field="o.partner_id.fr_person"/></td>
                                        <td><strong style="font-size:10px;">Representer: </strong></td>
                                        <td><span t-field="o.company_id.partner_id.fr_person"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong style="font-size:10px;">UIC: </strong></td>
                                        <td><span t-field="o.partner_id.uic"/></td>
                                        <td><strong style="font-size:10px;">UIC: </strong></td>
                                        <td><span t-field="o.company_id.uic"/></td> 
                                    </tr>
                                    -->
                                    <tr>
                                        <td><strong style="border-right:0; font-size:10px;">VAT ID:</strong> </td> 
                                        <td><span t-if="o.company_id.vat"><span t-field="o.company_id.vat"/></span></td>
                                        <td><strong style="font-size:10px;">VAT ID:</strong> </td>
                                        <td><span t-field="o.partner_id.vat"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        </div>

                        <!-- Is there a discount on at least one line? -->
                        <!-- <t t-set="display_discount" t-value="any([l.discount for l in invoice.invoice_line_ids])"/> -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                        <table class="table table-condensed" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="hidden">Source Document</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Unit measure</th>
                                    <th class="text-right">Unit Price</th>
                                    <!-- <th class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th> -->
                                    <th class="text-right">Taxes</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-foreach="o.sets_line" t-as="sets">
                                <tr t-foreach="o.invoice_line_ids.filtered(lambda r: r.product_set_id != sets.product_set_id)" t-as="l">
                                    <td>
                                        <span t-if="l.discount==0.0">
                                            <span t-field="l.name"/>
                                        </span>
                                        <span t-if="l.discount &lt; 0.0">
                                            <span t-field="l.name"/>   (<span t-esc="l.discount * 100"/><span>%)</span>
                                        </span>
                                    </td>
                                    <td class="hidden"><span t-field="l.origin"/></td>
                                    <td class="text-right">
                                        <span t-field="l.quantity"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.uom_id" groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                                    </td>
                                    <td class="text-right" id="subtotal">
                                        <span t-field="l.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <!-- Show sets --> 
                                <tr>
                                    <td>
                                        <span t-field="sets.product_set_id.display_name"/>
                                    </td>
                                    <td class="hidden"></td>
                                    <td class="text-right">
                                        <span t-field="sets.quantity"/>
                                    </td>
                                    <td class="text-right"></td>
                                    <td class="text-right">
                                        <span t-field="sets.amount_total"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td class="text-right"></td>
                                    <td class="text-right" id="subtotal">
                                        <span t-field="sets.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                </tr>
                                <t t-if="details == 1">
                                <tr t-foreach="o.invoice_line_ids.filtered(lambda r: r.product_set_id == sets.product_set_id)" t-as="l">
                                    <td>
                                        <span t-if="l.discount==0.0">
                                            <span t-field="l.name"/>
                                        </span>
                                        <span t-if="l.discount &lt; 0.0">
                                            <span t-field="l.name"/>   (<span t-esc="l.discount * 100"/><span>%)</span>
                                        </span>
                                    </td>
                                    <td>
                                        <span t-field="l.quantity"/>
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                </t>
                                </t>
                                <tr t-foreach="range(max(5-len(o.invoice_line_ids)+len(o.sets_line),0))" t-as="l">
                                    <td t-translation="off">&amp;nbsp;</td>
                                    <td class="hidden"></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <!-- <td t-if="display_discount"></td> -->
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <div id="total" class="row">
                                <div class="col-xs-8 pull-left">
                                    <p class="mb16">
                                        <strong>Total (In Words): </strong>
                                        <span t-field="o.amount_total_words"/>
                                    </p>
                                </div>
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                    <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                        <tr style="border-bottom:1px solid #dddddd;">
                                            <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td><span t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right">
                                                    <span t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <p t-if="o.payment_term_id">
                            <span t-field="o.payment_term_id.note"/>
                        </p>
                        <p t-if="o.fiscal_position_id.note">
                            <span t-field="o.fiscal_position_id.note"/>
                        </p>
                        <!--
                        <p t-if="o.comment">
                            <strong>Comment:</strong>
                            <span t-field="o.comment"/>
                        </p>
                        -->

                        <div class="row">

                            <br/>
                            <br/>
                            <br/>
                            <br/>

                            <div class="col-xs-12">
                            <table class="table table-condensed" name="deal">
                                <tbody class="invoice_deal">
                                    <tr>
                                        <td style="width:10%;"><strong>Receiver:</strong></td>
                                        <!--
                                        <td t-if="o.partner_id.wh_person" style="width:40%"><span t-field="o.partner_id.wh_person"/></td>
                                        <td t-if="not o.partner_id.wh_person" style="width:40%"><span t-field="o.partner_id.fr_person"/></td>
                                        -->
                                        <td style="width:40%;"></td>
                                        <td style="width:10%;"><strong>Writer: </strong></td>
                                        <td style="width:40%;"><span t-field="o.user_id.name"/> </td>
                                    </tr>
                                    <tr>
                                        <td><br/></td>
                                        <td><br/></td>
                                        <td><br/></td>
                                        <td><br/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Signature: </strong></td>
                                        <td/>
                                        <td><strong>Signature: </strong></td>
                                        <td><span>(ID <span t-field="o.user_id.id"/>)</span></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="font-size:10px;"><p><center> Pursuant to Article 7, paragraph 1 of the Accountancy Act, Art. 114 of the VAT Act and Art. 78 of the Public Offering of Securities Act, the stamp and the signature are not obligatory requisites of the invoice.</center></p></div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_invoice_sets">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="details" t-value="0"/>
                    <t t-call="sale_product_set.report_invoice_document_sets" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_invoice_sets_with_details">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="details" t-value="1"/>
                    <t t-call="sale_product_set.report_invoice_document_sets" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>