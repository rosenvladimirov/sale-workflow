<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_saleorder_pset_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                    <strong>The Attention of</strong>
                    <div t-field="doc.partner_id.name"/>
                    <div t-field="doc.partner_id"
                        t-options='{"widget": "contact", "fields": ["phone", "mobile"], "no_marker": True}' />
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id
                             and doc.partner_invoice_id != doc.partner_id
                             or doc.partner_shipping_id != doc.partner_invoice_id">
                        <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address:</strong>
                        <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                        <div t-field="doc.partner_invoice_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}'/>
                        <div t-if="doc.partner_id.parent_id">
                            <span t-field="doc.partner_id.parent_id.name"/>
                        </div>
                        <div t-if="not doc.partner_id.parent_id">
                            <span t-field="doc.partner_id.name"/>
                        </div>
                        <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/></p>
                        <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                            <strong>Shipping address:</strong>
                            <div t-field="doc.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone", "mobile"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </t>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <strong>From:</strong>
                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <div t-field="doc.company_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </t>
                    <t t-else="">
                        <div t-field="doc.company_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </t>
                </div>
            </div>

            <h2>
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state in ['sale','done']">Order # </span>
                    <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                    <span t-if="doc.state == 'cancel'">Canceled Order # </span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Pro-Forma Invoice # </span>
                </t>
                <span t-field="doc.name"/>
            </h2>

            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="doc.client_order_ref"/>
                </div>
                <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-xs-3">
                    <strong>Date Ordered:</strong>
                    <p t-field="doc.confirmation_date"/>
                </div>
                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-xs-3">
                    <strong>Quotation Date:</strong>
                    <p t-field="doc.date_order"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-field="doc.user_id"/>
                </div>
                <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                    <strong>Payment Terms:</strong>
                    <p t-field="doc.payment_term_id"/>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-xs-3">
                    <strong>Expiration Date:</strong>
                    <p t-field="doc.validity_date"/>
                </div>
            </div>
            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                <div class="row">
                    <br/>
                    <div class="col-xs-12">
                        <table class="table table-condensed">
                            <thead class="invoice_head_head">
                                <tr>
                                    <td colspan="2" style="width:50%;"><strong>SUPPLIER</strong></td>
                                    <td colspan="2" style="width:50%;"><strong>CUSTOMER</strong></td>
                                </tr>
                            </thead>
                            <tbody class="invoice_head_body">
                                <tr>
                                    <td><strong style="font-size:10px;">Company/Person Name: </strong></td>
                                    <td><span t-field="doc.company_id.name"/></td>
                                    <td><strong style="font-size:10px;">Company/Person Name: </strong></td>
                                    <t t-if="doc.partner_id.parent_id">
                                        <td><span t-field="doc.partner_id.parent_id.name"/></td>
                                    </t>
                                    <t t-if="not doc.partner_id.parent_id">
                                        <td><span t-field="doc.partner_id.name"/></td>
                                    </t>
                                </tr>
                                <tr>
                                    <td><strong style="font-size:10px;">Address: </strong></td>
                                    <td><span t-field="doc.company_id.zip"/> <span t-field="doc.company_id.city"/><span t-if="doc.company_id.country_id">, <span t-field="doc.company_id.country_id"/></span></td>
                                    <td><strong style="font-size:10px;">Address: </strong></td>
                                    <td><span t-field="doc.partner_id.zip"/> <span t-field="doc.partner_id.city"/><span t-if="doc.partner_id.country_id">, <span t-field="doc.partner_id.country_id"/></span></td>
                                </tr>
                                <tr>
                                    <td><strong style="font-size:10px;">Str.: </strong></td>
                                    <td><span t-field="doc.company_id.street"/></td>
                                    <td><strong style="font-size:10px;">Str.: </strong></td>
                                    <td><span t-field="doc.partner_id.street"/></td>
                                </tr>
                                <tr>
                                    <td/>
                                    <td><span t-field="doc.company_id.street2"/></td>
                                    <td/>
                                    <td><span t-field="doc.partner_id.street2"/></td>
                                </tr>
                                <tr>
                                    <td><strong style="border-right:0; font-size:10px;">VAT ID:</strong> </td>
                                    <td><span t-if="doc.company_id.vat"><span t-field="doc.company_id.vat"/></span></td>
                                    <td><strong style="font-size:10px;">VAT ID:</strong> </td>
                                    <td><span t-field="doc.partner_id.vat"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
            <t t-set="display_pictures" t-value="any([l.product_id.image_small for l in doc.order_line if l.product_id and l.product_id.image_small])"/>

            <t t-foreach="doc.order_lines_sets_layouted()" t-as="page">
                <table class="table table-condensed">
                    <thead>
                        <tr>

                            <th>&#8470;</th>
                            <t t-if="display_pictures">
                                <th colspan="2">Description</th>
                            </t>
                            <t t-else="">
                                <th>Description</th>
                            </t>
                            <th class="text-right">Quantity</th>
                            <th class="text-center">Unit measure</th>

                            <th class="text-right">Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th class="text-right">Taxes</th>
                            <th class="text-right" groups="sale.group_show_price_subtotal">Amount</th>
                            <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <t t-foreach="page" t-as="layout_category">

                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <t t-if="layout_category['quantity'] &gt; 0 and layout_category['price_unit'] &gt; 0">
                                        <td colspan="3" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">&amp;bull;
                                            <t t-esc="layout_category['name']"/>
                                        </td>
                                        <td class="text-right" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">
                                            <span t-esc="layout_category['quantity']"/>
                                        </td>
                                        <t t-if="doc.print_sets">
                                            <td colspan="5" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;"/>
                                        </t>
                                        <t t-else="">
                                            <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                            <t t-if="layout_category['quantity'] &gt; 0">
                                                <t t-set="unit_price" t-value="layout_category['quantity'] > 0 and subtotal/layout_category['quantity'] or subtotal"/>
                                                <td class="text-right" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">
                                                    <span t-esc="layout_category['quantity']"/>
                                                </td>
                                                <td class="text-right" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">
                                                    <span t-esc="unit_price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td colspan="2" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;"/>
                                            </t>
                                            <td style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">
                                                <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <td colspan="9" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">&amp;bull;
                                            <t t-esc="layout_category['name']"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>

                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr>
                                    <td><span t-esc="l_index+1"/></td>
                                    <t t-if="l.product_id and l.product_id.image_small">
                                        <td><span t-field="l.product_id.image_small" t-field-options='{"widget": "image"}'/></td>
                                    </t>
                                    <t t-if="display_pictures and not (l.product_id and l.product_id.image_small)">
                                        <td/>
                                    </t>
                                    <td><span t-field="l.name"/></td>
                                    <td class="text-right">
                                        <span t-field="l.product_uom_qty"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.product_uom" groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_subtotal">
                                        <span t-field="l.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_total">
                                        <span t-field="l.price_total"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="doc.print_sets">
                                <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                    <tr class="text-right">
                                        <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                        <t t-set="unit_price" t-value="layout_category['quantity'] > 0 and subtotal/layout_category['quantity'] or subtotal"/>

                                        <td colspan="9" class="text-right">
                                            <strong>Subtotal: </strong>
                                            <t t-if="layout_category['quantity'] &gt; 0">
                                            (<span t-esc="layout_category['quantity']"/>*<span t-esc="unit_price" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>)
                                            </t>
                                            <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                        </td>

                                    </tr>
                                </t>
                            </t>
                        </t>
                    </tbody>
                </table>

                <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                    <p style="page-break-before:always;"> </p>
                </t>
            </t>

            <div class="clearfix">
                <div class="row" name="total">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed" style="min-width: 200px;max-width: 350px;">
                            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                            <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr style="border-bottom:1px solid #dddddd;">
                                    <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                    <t t-else ="">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="amount_by_group[1]"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <p t-field="doc.note" />
            <p t-if="doc.payment_term_id.note">
                <span t-field="doc.payment_term_id.note"/>
            </p>
            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="doc.fiscal_position_id.note"/>
            </p>
            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                <div class="row" name="signatures">
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="col-xs-12">
                        <table class="table table-condensed" name="deal">
                            <tbody class="signature_deal">
                                <tr>
                                    <td style="width:10%;"><strong>Receiver:</strong></td>
                                    <td style="width:40%;"></td>
                                    <td style="width:10%;"><strong>Writer: </strong></td>
                                    <td style="width:40%;"><span t-field="doc.user_id.name"/> </td>
                                </tr>
                                <tr>
                                    <td><br/></td>
                                    <td><br/></td>
                                    <td><br/></td>
                                    <td><br/></td>
                                </tr>
                                <tr>
                                    <td><strong>Signature: </strong></td>
                                    <td/>
                                    <td><strong>Signature: </strong></td>
                                    <td><span>(ID <span t-field="doc.user_id.id"/>)</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
            <t t-if="not is_pro_forma">
                <div class="row" name="signatures">
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="col-xs-6 pull-right">
                        <table class="table table-condensed" name="deal">
                            <tbody class="signature_deal">
                                <tr>
                                    <td style="width:10%;"><strong>Writer: </strong></td>
                                    <td style="width:40%;"><span t-field="doc.user_id.name"/> </td>
                                </tr>
                                <tr>
                                    <td><br/></td>
                                    <td><br/></td>
                                </tr>
                                <tr>
                                    <td><strong>Signature: </strong></td>
                                    <td><span>(ID <span t-field="doc.user_id.id"/>)</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
            <div class="oe_structure"/>
        </div>
    </t>
</template>


<template id="report_saleorder_sets">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="sale_product_set.report_saleorder_pset_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

</odoo>
