<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_pset_document" inherit_id="report_saleorder_pset_document">
        <xpath expr="//td[@name='linename']" position="replace">
            <td name="linename">
                <t t-call="product_properties.product_properties_description"/>
            </td>
        </xpath>
        <xpath expr="//td[@name='plinename']" position="replace">
            <td name="plinename" colspan="3" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;">&amp;bull;
                <t t-call="product_properties.product_properties_description"/>
            </td>
        </xpath>
        <xpath expr="//td[@name='pslinename']" position="replace">
            <td colspan="2" style="font-weight: bold; border-left: 0px; border-right: 0px; border-bottom: 1px solid black;" name="pslinename">&amp;bull;
                <t t-call="product_properties.product_properties_description"/>
            </td>
        </xpath>
        <xpath expr="//td[@name='linename']" position="replace">
            <td name="linename">
                <t t-call="product_properties.product_properties_description"/>
            </td>
        </xpath>
        <xpath expr="//td[@name='elinename']" position="replace">
            <td colspan="9" style="font-weight: bold; border-left: 0px; border-bottom: 1px solid black;" name="elinename">&amp;bull;
                <t t-call="product_properties.product_properties_description"/>
            </td>
        </xpath>
    </template>
</odoo>