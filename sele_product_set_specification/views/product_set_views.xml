<?xml version="1.0"?>
<odoo>
    <record id="view_product_set_form" model="ir.ui.view">
        <field name="name">product.set.form.specifications</field>
        <field name="model">product.set</field>
        <field name="inherit_id" ref="sale_product_set.view_product_set_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='partnerdata']" position="after">
                <group colspan="4">
                    <label for="specifications" col="1"/>
                    <field col="3" name="specifications" nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
