<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Sale only company assets frontend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/sale_only_company/static/src/js/website_sale_set.js"></script>
        </xpath>
    </template>

    <template id="products_no_public" inherit_id="website_sale.products">
        <xpath expr="//t[@t-call='website.layout']" position="after">
            <t t-call="website.layout" groups="base.group_public">
                <div class="oe_structure" />
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1 hvrShadow" style="margin-top:10%">
                            <h2 class="text-center text-muted">
                                <font class="text-gamma">Warning! This e-commerse catalogue is for personell specialized in LPG systems only!</font>
                            </h2>
                            <p>
                                <div style="text-align:center">
                                    <span>If you are registered please <a href="/web/login">log in.</a></span>
                                </div>
                            </p>
                            <p>
                                <div style="text-align:center">
                                    <span>If you don't have a registration and wish to become our <a href="/partnership-relation">partner</a> please fill one of our surveys and a salesperson will contact you as soon as possible.</span>
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//t[@t-call='website.layout']" position="attributes">
            <attribute name="groups">!base.group_public</attribute>
        </xpath>
    </template>
    <template id="website_only_company_search_box" name="Website Comapany only Searchbox">
        <form t-att-action="keep('/shop/checkout/', search=0)" method="get" t-att-class="company_only_search_class">
            <div class="input-group">
                <div class="oe_comp_only_search">
                    <input type="text" name="search" class="search-query form-control oe_search_box" placeholder="Search..." t-att-value="search" />
                </div>
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default oe_search_button"><i class="fa fa-search"/></button>
                </span>
            </div>
        </form>
    </template>
    <template id="address_kanban_only" inherit_id="website_sale.address_kanban" name="Kanban address only company">
        <xpath expr="//div[@class='panel-body']" position="before">
            <div class="panel-heading" style="text-align: center">
                <t t-if="contact.type == 'contact'">
                    <i class="fa fa-address-card" aria-hidden="true"></i>
                    <span>Contact address</span>
                </t>
                <t t-if="contact.type == 'invoice'">
                    <i class="fa fa-file-text-o" aria-hidden="true"></i>
                    <span>Invoice data</span>
                </t>
                <t t-if="contact.type == 'delivery'">
                    <i class="fa fa-truck" aria-hidden="true"></i>
                    <span>Delivery address</span>
                </t>
                <t t-if="contact.type == 'other'">
                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                    <span>Other/Service address</span>
                </t>
            </div>
        </xpath>
        <xpath expr="//div[@class='panel-body']" position="attributes">
            <attribute name="style">min-height: 130px; padding: 15px;</attribute>
        </xpath>
    </template>
    <template id="checkout_only" inherit_id="website_sale.checkout" name="Checkout only company">
        <xpath expr="//t[@t-foreach='shippings']" position="before">
            <div class="products_pager">
                <div class="row" style="width: 100%;">
                    <t t-call="sale_only_company.website_only_company_search_box">
                        <t t-set="company_only_search_class" t-value="'pagination form-inline o_comp_only_search'"/>
                    </t>
                    <t t-call="website.pager" />
                </div>
            </div>
        </xpath>
    </template>
</odoo>
