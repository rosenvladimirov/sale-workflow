<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="after">
                <h2>Website sale only contact</h2>
                <div class="row mt16 o_settings_container" id="singup_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="contact_form_sale_only_setting" title="Terms of conditions for use in B2B deal">
                        <div class="o_setting_right_pane">
                            <div class="row">
                                <label class="col-md-3 o_light_label" string="Terms" for="website_login_note"/>
                                <field name="website_login_note" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
